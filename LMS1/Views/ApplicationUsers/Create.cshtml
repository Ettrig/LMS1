
@model LMS1.Models.ApplicationUser

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">

        <h3>Add New Student to Course</h3>

    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input name="CourseId" type="hidden" value="@ViewBag.CourseId" />
                        <div class="form-group">
                            <label asp-for="LmsName" class="control-label"></label>
                            <input asp-for="LmsName" class="form-control" />
                            <span asp-validation-for="LmsName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordHash" class="control-label"></label>
                            <input asp-for="PasswordHash" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </li>
    </ul>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

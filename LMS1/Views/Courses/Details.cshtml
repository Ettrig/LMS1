@model LMS1.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h3>Course description</h3>
<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit these data</a> |
    <a asp-controller="ApplicationUsers" asp-action="Create" asp-route-id="@Model.Id">Add student</a> |
    <a asp-action="Index">Back to list of courses</a>
</div>

<br>
<h3>List of modules</h3>

<p>
    <a asp-action="AddModule" asp-route-id="@Model.Id">Add Module</a>
</p>

@if (Model.Modules.Count > 0)
{
    <table class="table">
        <thead>
            @*<table class="table table-striped table-bordered">
                <thead style="background-color:antiquewhite">*@
            <tr>
                <th>Module Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Modules)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="CourseModules" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-controller="CourseModules" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="CourseModules" asp-route-id="@item.Id">Delete</a>
                </td>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Activity Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item2 in item.Activities)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item2.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item2.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item2.EndDate)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-controller="CourseModules" asp-route-id="@item2.Id">Details</a> |
                                        <a asp-action="Edit" asp-controller="CourseModules" asp-route-id="@item2.Id">Edit</a> |
                                        <a asp-action="Delete" asp-controller="CourseModules" asp-route-id="@item2.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

            </tr> 
            }
        </tbody>
    </table>
}




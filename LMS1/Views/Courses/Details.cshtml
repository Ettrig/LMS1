@model LMS1.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h3>Course description</h3>
<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit these data</a> |
    <a asp-controller="ApplicationUsers" asp-action="Create" asp-route-id="@Model.Id">Add student</a> |
    <a asp-controller="ApplicationUsers" asp-action="ListStudents" asp-route-id="@Model.Id">Show students</a> |
    <a asp-action="Index">Back to list of courses</a>
</div>

<br>



<h3>Files for the course</h3>

<p>
    <a asp-action="AddFile" asp-route-id="@Model.Id">Add File</a>
</p>

@if (Model.CourseDocuments?.Count > 0)
{
    string completeFilePath = "";
    <table class="table">
        <thead class="solid p-3 mb-2 bg-light text-dark">
            <tr>
                <th>File link</th>
                <th>Document name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CourseDocuments)
            {
                completeFilePath = "/Documents/" + item.FileName;
                <tr>
                    <td>
                        <a href=@completeFilePath>@item.FileName</a>
                    </td>
                    <td>
                        <h7>@item.InternalName</h7>
                    </td>
                    <td>
                        <a asp-action="DeleteCourseFile" asp-route-id="@item.Id"><button class="btn"><i class="fa fa-trash"></i></button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<br>


<h3>List of modules</h3>

<p>
    <a asp-action="AddModule" asp-route-id="@Model.Id">Add Module</a>
</p>

@if (Model.Modules.Count > 0)
{
    <table class="table">
        @*<thead class="solid">
            <tr>
                <th>Module Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th></th>
            </tr>
        </thead>*@
        <tbody>
            @foreach (var item in Model.Modules)
            {
                <tr class="solid p-3 mb-2 bg-light text-dark">
                    <td>
                        <h5><a asp-action="Details" asp-controller="CourseModules" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></h5>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="CourseModules" asp-route-id="@item.Id"><button class="btn"><i class="fa fa-edit"></i></button></a>
                        <a asp-action="Delete" asp-controller="CourseModules" asp-route-id="@item.Id"><button class="btn"><i class="fa fa-trash"></i></button></a>
                        <a asp-action="AddActivity" asp-controller="CourseModules" asp-route-id="@item.Id"><button class="btn"><i class="fa fa-plus"></i></button></a>
                    </td>
                </tr>
                @foreach (var item2 in item.Activities)
                {
                    <tr>
                        <td>
                            <h7><a asp-action="Details" asp-controller="CourseActivities" asp-route-id="@item2.Id">@Html.DisplayFor(modelItem => item2.Name)</a></h7>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item2.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item2.EndDate)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="CourseActivities" asp-route-id="@item2.Id"><button class="btn"><i class="fa fa-edit"></i></button></a>
                            <a asp-action="Delete" asp-controller="CourseActivities" asp-route-id="@item2.Id"><button class="btn"><i class="fa fa-trash"></i></button></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

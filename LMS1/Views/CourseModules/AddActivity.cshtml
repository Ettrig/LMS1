
@model LMS1.Models.CourseActivity

@{
    ViewData["Title"] = "Add Activity";
}

<div class="card">
    <div class="card-header">

        <h3>Add Activity</h3>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="AddActivity">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="ModuleId" value="@ViewBag.ModuleId" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Exercise" class="control-label"></label>
                            <input asp-for="Exercise" class="form-control" />
                            <span asp-validation-for="Exercise" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="ExerciseSubmissionRequired" /> @Html.DisplayNameFor(model => model.ExerciseSubmissionRequired)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Activity" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </li>
        <li class="list-group-item">

            <div>
                <a asp-action="Details" asp-route-id="@ViewBag.ModuleId">Back to Module Description</a>
            </div>
        </li>
    </ul>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
